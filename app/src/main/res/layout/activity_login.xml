<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
     >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/margin_common"
    android:orientation="vertical">
    <TextView
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_actionbar"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/text_welcoming_message"
        />

    <EditText
        android:id="@+id/user_name"
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_top"
        android:textColor="@color/white"
        android:hint="@string/hint_user_name"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/chat_room_name"
        style="@style/MatchWidth"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingTop="@dimen/padding_top"
        android:hint="@string/hint_chat_room_name"
        android:textSize="16sp"
        android:singleLine="true"
        />
</LinearLayout>
</RelativeLayout>